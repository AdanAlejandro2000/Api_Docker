pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/AdanAlejandro2000/Api_Docker.git'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -f golan-rest-simple/Dockerfile -t alecampos2000/mi-aplicacion-go:sha256-1 .'
            }
        }
        stage('Push') {
            steps {
                // Push de la imagen Docker a un registro si es necesario
                // Por ejemplo:
                // sh 'docker push alecampos2000/mi-aplicacion-go:sha256-1'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
        success {
            echo 'El pipeline se ejecutó correctamente'
        }
        failure {
            echo 'El pipeline falló. Revisar los logs para más detalles.'
        }
    }
}
