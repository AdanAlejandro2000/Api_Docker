pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/AdanAlejandro2000/Api_Docker.git'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -f golan-rest-simple/Dockerfile -t alecampos2000/mi-aplicacion-go:sha256-1 .'
            }
        }
        stage('Push') {
            steps {
                echo 'El pipeline se ejecut칩 correctamente'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
        success {
            echo 'El pipeline se ejecut칩 correctamente'
        }
        failure {
            echo 'El pipeline fall칩. Revisar los logs para m치s detalles.'
        }
    }
}
